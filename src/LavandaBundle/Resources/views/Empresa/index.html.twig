
{% extends ":app:base.html.twig"%}

{% block stylesheets %}

    {{ parent() }}

    <!-- NProgress -->
    <link href="{{ asset('assets/vendors/nprogress/nprogress.css') }}" rel="stylesheet">
    <!-- iCheck -->
    <link href="{{ asset('assets/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block top_content_header %}
    <title class="label-notifications-2">
        {{ "" | nombre_empresa}}  | Empresa
    </title>
{% endblock top_content_header%}

{% block page_content %}
    <div class="col-lg-12">
        {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel header">
                <h1>Datos de la empresa</h1>
            </div>
            <div class="panel-body">

                {{ form_widget(form) }}

            </div>
            <div class="panel-footer">

            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $("#lavandabundle_empresa_logo").change(function () {
            var fileInput = $(this);
            var filePath = fileInput.val();
            var allowedExtensions = /(.png)$/i;
            if(!allowedExtensions.exec(filePath)){
                toastr.error("El archivo debe contener la extensión .png","¡Atención!");
                fileInput.val('');
                return false;
            }
        });
    </script>

    <script src="{{ asset('bundles/kmsfroalaeditor/froala_editor_2.9.8/js/froala_editor.pkgd.min.js') }}"></script>
    <script src="{{ asset('bundles/kmsfroalaeditor/froala_editor_2.9.8/js/languages/es.js') }}"></script>
    <script>
        $(function() {
            $('div#froala-editor').froalaEditor({
                // Set the language code.
                language: 'es'
            })
        });
    </script>

    <!-- iCheck -->
    <script src="{{ asset('assets/vendors/iCheck/icheck.min.js') }}"></script>
    <!-- Custom Theme Scripts -->
    <script src="{{ asset('assets/js/custom.js') }}"></script>

{% endblock javascripts %}