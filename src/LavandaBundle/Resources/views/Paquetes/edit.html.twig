
{% extends ":app:base.html.twig"%}

{% block stylesheets %}

    {{ parent() }}

    <style>
        .selectize-control.movies .selectize-dropdown [data-selectable] {
            border-bottom: 1px solid rgba(0,0,0,0.05);
            height: 10px;

            position: relative;
            -webkit-box-sizing: content-box;
            box-sizing: content-box;
            padding: 10px 10px 10px 60px;
        }
        .selectize-control.movies .selectize-dropdown [data-selectable]:last-child {
            border-bottom: 0 none;
        }
        .selectize-control.movies .selectize-dropdown{
            font-size: 15px;
        }
        .selectize-input{
            background-color: white;
            color: black;
            padding: 1px;
            width: 100%;
            border: groove;
            font-size: 15px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
            -webkit-appearance: textfield;
            outline: none;
        }
    </style>

    <!-- NProgress -->
    <link href="{{ asset('assets/vendors/nprogress/nprogress.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block top_content_header %}
    <title class="label-notifications-2">
        {{ "" | nombre_empresa}}  | Paquetes | Editar
    </title>
{% endblock top_content_header%}

{% block page_content %}
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Editar Paquete del Cliente {{ paquete.idcliente.nombre }} {{ paquete.idcliente.apellido }}</h2>
                <small>El servicio asignado al paquete es: {{ paquete.idservicio.nombre }}</small>
            </div>
            <div class="panel-body">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="panel-footer">
                <ul>
                    <li>
                        <a style="font-size: medium" href="{{ path('paquetes_index') }}">Volver al listado</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $("#lavandabundle_paquetes_idcliente").selectize({
                maxItems: 1,
                placeholder: "Seleccione un cliente"
            });
            $("#lavandabundle_paquetes_idservicio").selectize({
                maxItems: 1,
                placeholder: "Seleccione un servicio"
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#lavandabundle_servicio_file").attr("required", false);
        });
    </script>

    <!-- iCheck -->
    <script src="{{ asset('assets/vendors/iCheck/icheck.min.js') }}"></script>
    <!-- Custom Theme Scripts -->
    <script src="{{ asset('assets/js/custom.js') }}"></script>

{% endblock javascripts %}
