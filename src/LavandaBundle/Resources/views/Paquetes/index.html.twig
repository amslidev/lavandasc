    <link href="{{ asset('assets/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">



{% endblock stylesheets %}

{% block top_content_header %}
    <title class="label-notifications-2">
        {{ "" | nombre_empresa}}  | Paquetes de Servicios
    </title>
{% endblock top_content_header%}


{% block page_content %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Paquetes de Servicios <small></small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="pull-right">
                <a  class="btn btn-primary" href="{{ path('paquetes_new') }}"><i class="fa fa-plus"> Nuevo</i> </a>
            </div>
            <br/>
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Servicio</th>
                    <th>Cantidad de sesiones</th>
                    <th>Sesiones realizadas</th>
                    <th>Precio</th>
                    <th>Fecha Apertura</th>
                    <th>Fecha Conclusi√≥n</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% if (paquetes != null) %}
                    {% for paquete in paquetes %}
                        <tr>
                            <td>{{ paquete.idcliente.nombre }} {{ paquete.idcliente.apellido }}</td>
                            <td>{{ paquete.idservicio.nombre }} </td>
                            <td>{{ paquete.cantidad }} </td>
                            <td> </td>
                            <td>${{ paquete.precio | number_format(2,'.',',') }} </td>
                            <td>{{ paquete.fechainicio != null ? paquete.fechainicio | date('d-m-Y') : "" }}</td>
                            <td>{{ paquete.fechafin != null ? paquete.fechafin | date('d-m-Y') : "" }}</td>
                            <td>
                                {% if paquete.fechafin == null %}
                                    <a class="btn btn-sm btn-warning" href="{{ path('paquetes_edit', {'idpaquete': paquete.idpaquete}) }}"> <i class="fa fa-edit"> Editar</i> </a>
                                {% endif %}
                                <a class="btn btn-sm btn-success" href="{{ path('pagospaquetes_index', {'idpaquete': paquete.idpaquete}) }}"> <i class="fa fa-money"> Pagos</i> </a>

                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td>No se encontraron registros de paquetes</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

