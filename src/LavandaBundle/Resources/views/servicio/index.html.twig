{% endblock stylesheets %}

{% block top_content_header %}
    <title class="label-notifications-2">
        {{ "" | nombre_empresa}}  | Servicios
    </title>
{% endblock top_content_header%}


{% block page_content %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Servicios <small></small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="pull-right">
                <ul>
                    <li>
                        <a style="font-size: medium"  class="label label-primary" href="{{ path('servicio_new') }}">Crear servicio</a>
                    </li>
                </ul>
            </div>
            <br/>
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Tiempo (Min.)</th>
                    <th>Precio</th>
                    <th>Cobro long.</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for servicio in servicios %}
                    <tr>
                        <td>{{ servicio.nombre }}</td>
                        <td>{{ servicio.tiempo }}</td>
                        <td>
                            {% if servicio.cobraronza == false %}
                                ${{ servicio.precio | number_format(2, ".",",") }}
                            {% else %}
                                <p>Se cobra por longitud</p>
                            {% endif %}
                        </td>
                        <td>
                            {% if servicio.cobraronza == 1 %}
                                <i class="fa fa-check-square-o" style="color: green"></i>
                            {% else %}
                                <i class="fa fa-close" style="color: red"></i>
                            {% endif %}
                        </td>
                        <td>
                            {% if servicio.activo == 1 %}
                                <i class="fa fa-check-square-o" style="color: green"></i>
                            {% else %}
                                <i class="fa fa-close" style="color: red"></i>
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="{{ path('servicio_edit', { 'idservicio': servicio.idservicio }) }}"> <i class="fa fa-edit" > Editar</i> </a>
                            {% if servicio.cobraronza == 1 %}
                                <a href="{{ path('serviciolongitud_index', {'idservicio': servicio.idservicio}) }}" class="btn btn-primary btn-sm"><i class="fa fa-cog"> Longitudes</i> </a>
                            {% endif %}
                            <a href="{{ path('fotosservicio_index', {'idservicio': servicio.idservicio}) }}" class="btn btn-dark btn-sm" ><i class="fa fa-picture-o"> Galer√≠a</i> </a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>
</div>

{% endblock %}

