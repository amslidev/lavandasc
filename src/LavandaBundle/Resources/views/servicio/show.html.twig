{% extends ":app:base.html.twig"%}

{% block body %}
    <h1>Servicio</h1>

    <table>
        <tbody>
            <tr>
                <th>Idservicio</th>
                <td>{{ servicio.idservicio }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ servicio.nombre }}</td>
            </tr>
            <tr>
                <th>Tiempo</th>
                <td>{{ servicio.tiempo }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ servicio.precio }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('servicio_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('servicio_edit', { 'idservicio': servicio.idservicio }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
