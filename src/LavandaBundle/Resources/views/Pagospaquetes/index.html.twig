    <link href="{{ asset('assets/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">



{% endblock stylesheets %}

{% block top_content_header %}
    <title class="label-notifications-2">
        {{ "" | nombre_empresa}}  | Gestión de pagos de paquetes de servicios
    </title>
{% endblock top_content_header%}


{% block page_content %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Gestión de pagos de paquetes de servicios </h2>

            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="pull-right">
                <button type="button" id="btnpagopaquete" class="btn btn-primary" data-toggle="modal" data-target="#pagopaquete">
                    <i class="fa fa-plus" aria-hidden="true"> Compra</i>
                </button>
            </div>
            <ul class="list-group-item-text">
                <li><h4>Cliente: {{ paquete.idcliente.nombre }} {{ paquete.idcliente.apellido }} </h4></li>
                <li><h4>Servicio: {{ paquete.idservicio.nombre }}</h4></li>
                <li><h4>Precio del paquete: ${{ paquete.precio  | number_format(2,',','.')}}</h4></li>
                <li><h4>Cantidad abonada: ${{ sumapagos | number_format(2,',','.') }}</h4></li>
                <li><h4>Pendiente de pago: ${{ pagopendiente  | number_format(2,',','.')}}</h4></li>
            </ul>
            <br/>
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Cantidad abonada</th>
                    <th>Fecha de pago</th>
                    <th>Forma de pago</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% if (pagos != null) %}
                    {% for pago in pagos %}
                        <tr>
                            <td>${{ pago.cantidadabonada | number_format(2,'.',',') }}</td>
                            <td>{{ pago.fechapago | date('d-m-Y') }} </td>
                            <td>{{ pago.idformapago.nombre }} </td>
                            <td>
                                <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editpagopaquete{{ pago.idpagopaquete }}">
                                    <i class="fa fa-edit" aria-hidden="true"> Editar</i>
                                </button>
                                <a href="{{ path('pagospaquetes_delete', {'idpagopaquete': pago.idpagopaquete }) }}" class="btn btn-sm btn-danger">
                                    <i class="fa fa-edit" aria-hidden="true"> Eliminar</i>
                                </a>
                            </td>
                        </tr>
                        {{ render(controller('LavandaBundle:PagosPaquete:edit', {"idpagopaquete": pago.idpagopaquete})) }}
                    {% endfor %}
                {% else %}
                    <tr>
                        <td>No se encontraron registros de pagos</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>

            <!-- Modal -->
            <div class="modal fade" id="pagopaquete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel">Registro de Pago</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_start(form, {'attr':{'onsubmit':'return checkSubmit();' } } ) }}

                            {{ form_end(form) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="footer_fixed">
            <ul>
                <li><a href="{{ path('paquetes_index') }}"> Volver a los paquetes</a></li>
            </ul>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $("#lavandabundle_comprasproducto_Guardar").one('click', function (event) {
            event.preventDefault();
            toastr.info('Presione nuevamente para confirmar el registro','¡Atención!');
        });

        enviando = false; //Obligaremos a entrar el if en el primer submit

        function checkSubmit() {
            if (!enviando) {
                enviando= true;
                return true;
            } else {
                //Si llega hasta aca significa que pulsaron 2 veces el boton submit
                toastr.info('Ya se enviaron los datos','¡Atención!');
                return false;
            }
        }
    </script>



